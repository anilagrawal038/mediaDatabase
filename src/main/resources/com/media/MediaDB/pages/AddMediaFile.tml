<html t:type="mediaLayout" title="MediaDB"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">

<div>
	<h1>Add Media File</h1>
</div>
<div>${message}</div>
<div class="row" style="margin-left: 2cm; width: 700px">
	<div class="span4 offset3">
		<t:form t:id="addMediaFileForm">
			<h2>Please fill media file details</h2>
			<t:textfield t:id="name" value="name" t:mixins="formgroup" />
			<t:textfield t:id="location" value="location" t:mixins="formgroup" />
			<t:textfield t:id="size" value="size" t:mixins="formgroup" />
			<t:textfield t:id="duration" value="duration" t:mixins="formgroup" />
			<t:textfield t:id="frameRate" value="frameRate" t:mixins="formgroup" />
			<t:textfield t:id="resolution" value="resolution"
				t:mixins="formgroup" />
			<t:textfield t:id="bitrate" value="bitrate" t:mixins="formgroup" />
			<t:label for="mediaFormat" />
			<t:select t:id="mediaFormat" validate="required" />
			<t:label for="mediaCodec" />
			<t:select t:id="mediaCodec" validate="required" />
			<t:submit class="btn btn-large btn-primary" value="Submit"
				style="margin-top: 20px;margin-left: 175px; width:350px" />
		</t:form>
	</div>
</div>
</html>